    <script>
        const fineData = [
            { name: "携帯電話使用(保持)", price: 12000, category: "high", icon: "ph-phone-slash" },
            { name: "速度超過(25km/h以上)", price: 12000, category: "high", icon: "ph-gauge" },
            { name: "信号無視", price: 6000, category: "mid", icon: "ph-traffic-signal" },
            { name: "通行区分違反(逆走)", price: 6000, category: "mid", icon: "ph-arrows-left-right" },
            { name: "指定場所一時不停止", price: 5000, category: "low", icon: "ph-hand-stop" },
            { name: "無灯火", price: 5000, category: "low", icon: "ph-lightbulb-off" },
            { name: "ブレーキ不良", price: 5000, category: "low", icon: "ph-wrench" },
            { name: "遮断踏切立入り", price: 7000, category: "mid", icon: "ph-train" },
            { name: "二人乗り(送迎注意)", price: 3000, category: "low", icon: "ph-users" },
            { name: "歩道での徐行違反", price: 3000, category: "low", icon: "ph-person-walking" },
            { name: "並進禁止違反", price: 3000, category: "low", icon: "ph-columns" }
        ];

        let currentCat = 'all';

        function renderFines() {
            const grid = document.getElementById('fine-grid');
            const search = document.getElementById('fine-search').value.toLowerCase();
            grid.innerHTML = '';

            const filtered = fineData.filter(f => {
                const matchesSearch = f.name.includes(search);
                const matchesCategory = currentCat === 'all' || 
                                      (currentCat === 'high' && f.price >= 10000) ||
                                      (currentCat === 'mid' && f.price >= 6000 && f.price < 10000);
                return matchesSearch && matchesCategory;
            });

            filtered.forEach(f => {
                const card = document.createElement('div');
                card.className = "fine-card bg-white p-4 rounded-2xl border border-slate-200 flex items-center justify-between shadow-sm active:bg-slate-50";
                card.innerHTML = `
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-xl bg-slate-50 flex items-center justify-center text-xl text-slate-400">
                            <i class="ph ${f.icon}"></i>
                        </div>
                        <span class="text-xs font-black text-slate-700">${f.name}</span>
                    </div>
                    <div class="text-right">
                        <span class="text-lg font-black tracking-tight ${f.category === 'high' ? 'text-red-600' : 'text-slate-900'}">${f.price.toLocaleString()}</span>
                        <span class="text-[8px] font-black text-slate-400 ml-0.5">円</span>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        function setFilter(cat, btn) {
            currentCat = cat;
            document.querySelectorAll('.filter-tag').forEach(b => {
                b.classList.remove('active', 'bg-blue-600', 'text-white', 'shadow-md');
                b.classList.add('bg-white', 'text-slate-600', 'border-slate-200');
            });
            btn.classList.add('active', 'bg-blue-600', 'text-white', 'shadow-md');
            btn.classList.remove('bg-white', 'text-slate-600', 'border-slate-200');
            renderFines();
        }

        function filterFines() { renderFines(); }

        function switchSystem(type) {
            const btnOld = document.getElementById('btn-old-system');
            const btnNew = document.getElementById('btn-new-system');
            const viewOld = document.getElementById('view-old-system');
            const viewNew = document.getElementById('view-new-system');

            if (type === 'new') {
                btnNew.classList.add('bg-white', 'shadow-md', 'text-blue-700');
                btnOld.classList.remove('bg-white', 'shadow-md', 'text-blue-700');
                viewNew.classList.remove('hidden');
                viewOld.classList.add('hidden');
            } else {
                btnOld.classList.add('bg-white', 'shadow-md', 'text-blue-700');
                btnNew.classList.remove('bg-white', 'shadow-md', 'text-blue-700');
                viewOld.classList.remove('hidden');
                viewNew.classList.add('hidden');
            }
        }

        window.addEventListener('load', () => { renderFines(); });
    </script>
</body>

